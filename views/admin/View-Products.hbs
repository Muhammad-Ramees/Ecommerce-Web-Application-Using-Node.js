<section>
    <div class="container">
      <div class="row mt-4">
      <a href="/admin/add-product " class="btn btn-success ml-auto">Add product</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td> <img style ="height:50px;width:50px" src="/product-images/{{this._id}}.jpg"></td>
       <td><a href="/admin/edit-product/{{this._id}} "class="btn btn-primary">Edit</a></td>
      <td><a href="/admin/delete-product/{{this._id}} "class="btn btn-danger"onclick="confirm('do youwant  to delete{{this.name}}')">Delete</a></td>
      
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>